<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="password_reset_form">
        <field name="name">wizard.password.reset.form</field>
        <field name="model">auth.signup.reset.password</field>
        <field name="arch" type="xml">
            <form string="Send password reset">
                <p>This will send a email to all selected users with a link to set a new password</p>
                <footer>
                    <button name="do_send" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
