    <record id="action_send_password_reset" model="ir.actions.act_window">
      <field name="name">Send password reset email</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">auth.signup.reset.password</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="password_reset_form"/>
      <field name="context">{}</field>
      <field name="target">new</field>
      <field name="help">This will send a email for reset password to all selected users.</field>
      <field name="binding_model_id" ref="base.model_res_users" />
      <field name="binding_view_types">list</field>
      <field name="limit">80</field>
    </record>
  </data>
</odoo>